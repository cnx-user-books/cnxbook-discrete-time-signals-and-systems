                  <m:mo>]</m:mo>
                </m:mrow>
                <m:mtext> </m:mtext>
                <m:mo>=</m:mo>
                <m:mtext> </m:mtext>
                <m:mrow>
                  <m:mo>[</m:mo>
                  <m:mtable rowspacing="4pt" columnspacing="1em">
                    <m:mtr>
                      <m:mtd>
                        <m:msub>
                          <m:mi>h</m:mi>
                          <m:mrow class="MJX-TeXAtom-ORD">
