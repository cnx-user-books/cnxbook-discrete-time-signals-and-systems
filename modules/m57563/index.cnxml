                          <m:mi>h</m:mi>
                          <m:mrow class="MJX-TeXAtom-ORD">
                            <m:mn>1</m:mn>
                            <m:mo>,</m:mo>
                            <m:mi>N</m:mi>
                            <m:mo>−</m:mo>
                            <m:mn>1</m:mn>
                          </m:mrow>
                        </m:msub>
                      </m:mtd>
                    </m:mtr>
                    <m:mtr>
                      <m:mtd>
                        <m:msub>
                          <m:mi>h</m:mi>
                          <m:mrow class="MJX-TeXAtom-ORD">
                            <m:mn>2</m:mn>
