                            <m:mn>0</m:mn>
                          </m:mrow>
                        </m:msub>
                      </m:mtd>
                      <m:mtd>
                        <m:msub>
                          <m:mi>h</m:mi>
                          <m:mrow class="MJX-TeXAtom-ORD">
                            <m:mn>1</m:mn>
                            <m:mo>,</m:mo>
                            <m:mn>1</m:mn>
